{
    "openapi": "3.0.0",
    "info": {
        "title": "Arukereso Orders API",
        "description": "Test homework",
        "contact": {
            "email": "gergipeter@gmail.com"
        },
        "version": "1.0.0"
    },
    "paths": {
        "/api/orders/list": {
            "post": {
                "tags": [
                    "Orders"
                ],
                "summary": "List orders with filters",
                "operationId": "listOrders",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "order_id": {
                                        "type": "integer"
                                    },
                                    "status": {
                                        "properties": {
                                            "name": {
                                                "description": "New order status name",
                                                "type": "string",
                                                "enum": [
                                                    "new",
                                                    "completed"
                                                ]
                                            }
                                        },
                                        "type": "object"
                                    },
                                    "start_date": {
                                        "type": "string",
                                        "format": "date"
                                    },
                                    "end_date": {
                                        "type": "string",
                                        "format": "date"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "List of filtered orders"
                    },
                    "422": {
                        "description": "Validation error"
                    }
                }
            }
        },
        "/api/orders": {
            "post": {
                "tags": [
                    "Orders"
                ],
                "summary": "Create a new order",
                "operationId": "createOrder",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "customer",
                                    "shipping_method",
                                    "billing_address",
                                    "shipping_address",
                                    "products"
                                ],
                                "properties": {
                                    "customer": {
                                        "properties": {
                                            "name": {
                                                "type": "string",
                                                "example": "John Doe"
                                            },
                                            "email": {
                                                "type": "string",
                                                "format": "email",
                                                "example": "john.doe@example.com"
                                            }
                                        },
                                        "type": "object"
                                    },
                                    "shipping_method": {
                                        "properties": {
                                            "name": {
                                                "description": "New shipping method name",
                                                "type": "string",
                                                "enum": [
                                                    "pickup",
                                                    "home_delivery"
                                                ]
                                            }
                                        },
                                        "type": "object"
                                    },
                                    "billing_address": {
                                        "properties": {
                                            "name": {
                                                "type": "string",
                                                "example": "John Doe"
                                            },
                                            "postal_code": {
                                                "type": "string",
                                                "example": "12345"
                                            },
                                            "city": {
                                                "type": "string",
                                                "example": "Example City"
                                            },
                                            "street": {
                                                "type": "string",
                                                "example": "123 Example Street"
                                            }
                                        },
                                        "type": "object"
                                    },
                                    "shipping_address": {
                                        "properties": {
                                            "name": {
                                                "type": "string",
                                                "example": "Jane Doe"
                                            },
                                            "postal_code": {
                                                "type": "string",
                                                "example": "54321"
                                            },
                                            "city": {
                                                "type": "string",
                                                "example": "Another City"
                                            },
                                            "street": {
                                                "type": "string",
                                                "example": "456 Another Street"
                                            }
                                        },
                                        "type": "object"
                                    },
                                    "products": {
                                        "type": "array",
                                        "items": {
                                            "properties": {
                                                "name": {
                                                    "type": "string",
                                                    "example": "Product A"
                                                },
                                                "quantity": {
                                                    "type": "integer",
                                                    "example": 2
                                                },
                                                "gross_unit_price": {
                                                    "type": "number",
                                                    "example": 19.99
                                                }
                                            },
                                            "type": "object"
                                        }
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Order created successfully"
                    },
                    "422": {
                        "description": "Validation error"
                    }
                }
            }
        },
        "/api/orders/{id}": {
            "put": {
                "tags": [
                    "Orders"
                ],
                "summary": "Update a specific order by ID",
                "operationId": "updateOrder",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "requestBody": {
                    "description": "JSON input for updating order status",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "order_id": {
                                        "description": "ID of the order to be updated",
                                        "type": "integer"
                                    },
                                    "status": {
                                        "properties": {
                                            "name": {
                                                "description": "New order status name",
                                                "type": "string",
                                                "enum": [
                                                    "new",
                                                    "completed"
                                                ]
                                            }
                                        },
                                        "type": "object"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Order updated successfully"
                    },
                    "404": {
                        "description": "Order not found"
                    },
                    "422": {
                        "description": "Validation error"
                    }
                }
            },
            "delete": {
                "tags": [
                    "Orders"
                ],
                "summary": "Delete a specific order by ID",
                "operationId": "deleteOrder",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "204": {
                        "description": "Order deleted successfully"
                    },
                    "404": {
                        "description": "Order not found"
                    },
                    "500": {
                        "description": "Failed to delete order"
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Address": {
                "required": [
                    "name",
                    "postal_code",
                    "city",
                    "street"
                ],
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "name": {
                        "type": "string",
                        "example": "Home"
                    },
                    "postal_code": {
                        "type": "string",
                        "example": "12345"
                    },
                    "city": {
                        "type": "string",
                        "example": "City"
                    },
                    "street": {
                        "type": "string",
                        "example": "Street 123"
                    }
                },
                "type": "object"
            },
            "Customer": {
                "required": [
                    "name",
                    "email"
                ],
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "name": {
                        "type": "string",
                        "example": "John Doe"
                    },
                    "email": {
                        "type": "string",
                        "format": "email",
                        "example": "john@example.com"
                    }
                },
                "type": "object"
            },
            "Order": {
                "required": [
                    "customer_id",
                    "order_status_id",
                    "shipping_method_id",
                    "billing_address_id",
                    "shipping_address_id"
                ],
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "customer_id": {
                        "type": "integer",
                        "example": 1
                    },
                    "order_status_id": {
                        "type": "integer",
                        "example": 1
                    },
                    "shipping_method_id": {
                        "type": "integer",
                        "example": 1
                    },
                    "billing_address_id": {
                        "type": "integer",
                        "example": 1
                    },
                    "shipping_address_id": {
                        "type": "integer",
                        "example": 2
                    },
                    "start_date": {
                        "type": "string",
                        "format": "date",
                        "example": "2024-01-13"
                    },
                    "end_date": {
                        "type": "string",
                        "format": "date",
                        "example": "2024-01-20"
                    }
                },
                "type": "object"
            },
            "OrderProduct": {
                "required": [
                    "order_id",
                    "product_id",
                    "quantity"
                ],
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "order_id": {
                        "type": "integer",
                        "example": 1
                    },
                    "product_id": {
                        "type": "integer",
                        "example": 1
                    },
                    "quantity": {
                        "type": "integer",
                        "example": 2
                    }
                },
                "type": "object"
            },
            "OrderStatus": {
                "required": [
                    "name"
                ],
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "name": {
                        "type": "string",
                        "example": "new"
                    }
                },
                "type": "object"
            },
            "Product": {
                "required": [
                    "name",
                    "gross_unit_price"
                ],
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "name": {
                        "type": "string",
                        "example": "Product A"
                    },
                    "gross_unit_price": {
                        "type": "number",
                        "format": "float",
                        "example": 29.99
                    }
                },
                "type": "object"
            },
            "ShippingMethod": {
                "required": [
                    "name"
                ],
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "name": {
                        "type": "string",
                        "example": "home_delivery"
                    }
                },
                "type": "object"
            }
        }
    },
    "tags": [
        {
            "name": "Orders",
            "description": "API endpoints"
        }
    ],
    "externalDocs": {
        "description": "More documentation here...",
        "url": "https://example.com/externaldoc1/"
    }
}